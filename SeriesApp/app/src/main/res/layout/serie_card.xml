<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/serie_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:padding="12dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:contentPadding="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/serie_image_view"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/serie_name_view"
            android:layout_width="200dp"
            android:layout_height="31dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Carregando..."
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="20sp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/serie_image_view"
            tools:layout_conversion_absoluteHeight="50dp"
            tools:layout_conversion_absoluteWidth="250dp"
            tools:layout_conversion_absoluteX="0dp"
            tools:layout_conversion_absoluteY="0dp" />

        <TextView
            android:id="@+id/status_view"
            android:layout_width="120dp"
            android:layout_height="31dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Premiered"
            android:textAlignment="center"
            android:textSize="16sp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/serie_name_view" />

        <TextView
            android:id="@+id/serie_status_view"
            android:layout_width="120dp"
            android:layout_height="31dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="..."
            android:textAlignment="center"
            android:textSize="16sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/serie_premiered_view"
            card_view:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/premiered_view"
            android:layout_width="120dp"
            android:layout_height="31dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Status"
            android:textAlignment="center"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/status_view" />

        <TextView
            android:id="@+id/serie_premiered_view"
            android:layout_width="120dp"
            android:layout_height="31dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="..."
            android:textAlignment="center"
            android:textSize="16sp"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/serie_name_view" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>